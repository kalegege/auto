<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="default" >

    <!--关闭注解信息 -->
    <commentGenerator>
        <property name="suppressAllComments" value="true"/>
    </commentGenerator>

		<!-- 数据库配置  -->  
		<jdbcConnection driverClass="com.mysql.jdbc.Driver" 
			connectionURL="jdbc:mysql://125.210.141.30/galaxy?useUnicode=true&amp;characterEncoding=GBK" 
			userId="admin" 
			password="Hello1234">   
		</jdbcConnection>   

    <javaTypeResolver>
        <property name="forceBigDecimals" value="false"/>
    </javaTypeResolver>

    <!-- model-->
    <javaModelGenerator targetPackage="com.wasu.auto.model" targetProject="src/main/java">
        <property name="enableSubPackages" value="true"/>
        <property name="trimStrings" value="true"/>
    </javaModelGenerator>

    <!-- xml-->
    <sqlMapGenerator targetPackage="mapping" targetProject="src/main/resources">
        <property name="enableSubPackages" value="true"/>
    </sqlMapGenerator>

    <!-- mapper-->
    <javaClientGenerator type="XMLMAPPER" targetPackage="com.wasu.auto.dao" targetProject="src/main/java">
        <property name="enableSubPackages" value="true"/>
    </javaClientGenerator>

    <table tableName="chanel_actor" domainObjectName="Actor"></table>
    <table tableName="chanel_item" domainObjectName="Item"></table>
    <table tableName="chanel_team" domainObjectName="Team"></table>
    <table tableName="chanel_item_team" domainObjectName="ItemTeam"></table>
    </context>
</generatorConfiguration>